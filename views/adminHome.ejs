<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login: Admin</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Admin Panel</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <!-- Search bar -->
          <li class="nav-item">
            <span class="navbar-text mr-3">Welcome, <%=name %></span>
          </li>
        </ul>
        <!-- User display name and logout -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <form
              class="form-inline"
              action="/admin/logged/:username"
              method="post"
            >
              <input
                class="form-control mr-sm-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
                name="userfind"
              />
            </form>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-danger" href="/admin/signout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row">
        <table class="table table-striped">
          <tr>
            <th>UserName</th>
            <th>Email Address</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
          <% for(var data of userDetails) { %>
          <tr>
            <td><%=data.username %></td>
            <td><%=data.email %></td>
            <td>
              <form action="/admin/edit/:name" method="get">
                <input
                  type="hidden"
                  name="username"
                  value="<%=data.username %>"
                />
                <input type="hidden" name="email" value="<%=data.email %>" />
                <button class="btn btn-success">
                  <a style="text-decoration: none; color: #fff">Edit</a>
                </button>
              </form>
            </td>

            <td>
              <form action="/admin/delete/:name">
                <input
                  type="hidden"
                  name="username"
                  value="<%=data.username %>"
                />
                <button class="btn btn-danger">
                  <a style="text-decoration: none; color: #fff">Delete</a>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
